<ContentDialog
    x:Class="StartAudioInTheBackground.MicPermissionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="StartAudioInTheBackground: Microphone Permission is Required"
    PrimaryButtonText="Microphone Settings"
    CloseButtonText="Exit App"
    DefaultButton="Primary"
    >

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <!-- Content body -->
        <TextBlock Text="This App requires permission to access your microphone. Please enable access to the microphone and then restart the App." TextWrapping="Wrap" />
    </StackPanel>

</ContentDialog>
